platform :ios, '10.0'

target 'SwrveSDKTest' do
  pod 'SwrveSDKCommon', :path => '../'
  pod 'SwrveConversationSDK', :path => '../'
  pod 'SwrveSDK', :path => '../'
  #pod 'SwrveSDK', '~> 6.2.1'

  target 'SwrveSDKTestTests' do
    pod 'OCMock', '~> 3.4.3'
    inherit! :search_paths
  end
end

target 'SwrveSDKTVTest' do
  platform :tvos, '10.0'
  pod 'SwrveSDKCommon', :path => '../'
  pod 'SwrveConversationSDK', :path => '../'
  pod 'SwrveSDK', :path => '../'
  #pod 'SwrveSDK', '~> 6.2.1'

  target 'SwrveSDKTVTests' do
    platform :tvos, '10.0'
    pod 'OCMock', '~> 3.4.3'
    inherit! :search_paths
  end
end

post_install do |installer_representation|
   installer_representation.pods_project.targets.each do |target|
       target.build_configurations.each do |config|
           config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = ['$(inherited)', 'SWRVE_LOG_IDFA', 'SWRVE_LOG_IDFV']
       end
   end
end
